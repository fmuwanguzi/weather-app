<form action="/auth/signup" method="POST">

<div class="form-group">
  <label for="new-email" style="color: lightskyblue ">Email</label>
  <input id="new-email" type="text" name="email" class="form-control">
</div>

<div class="form-group">
  <label for="new-name" style="color: lightskyblue ">Name</label>
  <input id="new-name" type="text" name="name" class="form-control">
</div>

<div class="form-group">
  <label for="new-password" style="color: lightskyblue ">Password</label>
  <input id="new-password" type="password" name="password" class="form-control">
</div>
  <input class="btn btn-primary" type="submit" value="Sign up">
</form>
